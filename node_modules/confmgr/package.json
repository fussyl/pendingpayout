{
  "name": "confmgr",
  "version": "1.0.6",
  "description": "Env. Configuration Manager",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/chevdor/confmgr.git"
  },
  "bugs": {
    "url": "https://gitlab.com/chevdor/confmgr/issues/new?issue"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://gitlab.com/chevdor/confmgr",
  "scripts": {
    "clean": "rm -rf .nyc_output build coverage node_modules out dist lib build docs .nyc_output",
    "setup": "npm install -g ts-node",
    "lint": "eslint --ext .ts . && tsc --noEmit --pretty",
    "lint:fix": "eslint --ext .ts . --fix",
    "test": "mocha -i --grep 'Benchmarks'",
    "test:all": "mocha",
    "test:watch": "mocha --watch -i --grep 'Benchmarks'",
    "test:check": "yarn lint && yarn test",
    "test:coverage1": "TS_NODE_FILES=true mocha â€” exit â€” require ts-node/register â€” colors test/**/*.ts",
    "test:coverage2": "nyc npm run test",
    "test2": "nyc mocha",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "build": "tsc --build tsconfig.json",
    "build:doc": "typedoc --out docs src",
    "prepare": "yarn build",
    "preversion": "yarn lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags -f",
    "prepublishOnly": "yarn lint && yarn test"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "author": "chevdor",
  "license": "MIT",
  "keywords": [
    "config",
    "configuration",
    "manager",
    "env",
    "dotenv"
  ],
  "dependencies": {
    "@babel/runtime": "7.10.4",
    "@types/yaml": "1.9.7",
    "chalk": "4.1.0",
    "dotenv": "8.2.0",
    "typescript": "3.9.6",
    "yaml": "1.10.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/dotenv": "8.2.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "14.0.14",
    "@typescript-eslint/eslint-plugin": "3.5.0",
    "@typescript-eslint/parser": "3.5.0",
    "chai": "4.2.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "mocha": "8.0.1",
    "nyc": "15.1.0",
    "prettier": "2.0.5",
    "ts-node": "8.10.2",
    "typedoc": "0.17.8",
    "yarn": "1.22.4"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "build/"
    ],
    "env": [
      "mocha"
    ]
  },
  "engines": {
    "node": ">=12",
    "yarn": "^1.15"
  }
}
